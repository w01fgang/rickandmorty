[ignore]
<PROJECT_ROOT>/\.git/
<PROJECT_ROOT>/\.next
.*/node_modules/.*.prototype.*
.*/node_modules/.*caniuse.*
.*/node_modules/.*htmlparser2.*
.*/node_modules/.*istanbul.*
.*/node_modules/.*webpack.*
.*/node_modules/@next/.*
.*/node_modules/flow-typed/.*
.*/node_modules/flowgen/.*
.*/node_modules/eslint.*
.*/node_modules/@babel.*
.*/node_modules/babel.*

[untyped]
.*/node_modules/@emotion/sheet/src/.*
.*/node_modules/@emotion/weak-memoize/src/.*
.*/node_modules/@emotion/core/src/.*
.*/node_modules/@emotion/cache/src/.*
.*/node_modules/react-select/src/.*

[include]

[libs]

[lints]
unclear-type=error
unnecessary-optional-chain=error
untyped-import=error
untyped-type-import=error
unnecessary-invariant=error
sketchy-number=error
implicit-inexact-object=error
deprecated-utility=error
deprecated-type=error
ambiguous-object-type=error


[options]
types_first=false
emoji=true
lazy_mode=fs
esproposal.optional_chaining=enable
esproposal.nullish_coalescing=enable
saved_state.fetcher=local
include_warnings=true
experimental.const_params=true

; This option lets you alias 'any' with a given string - useful for explaining why youâ€™re using 'any'
; Please, do not use "fix me" suppress types and comments
suppress_type=$FlowFixMe
suppress_type=$FlowFixMeProps
suppress_type=$FlowFixMeState

[strict]
unsafe-getters-setters
untyped-import
untyped-type-import
unclear-type
